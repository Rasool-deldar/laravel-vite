{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "lib": [
            "ESNext",
            "ESNext.AsyncIterable",
            "DOM"
        ],
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowJs": true,
        "sourceMap": true,
        "strict": true,
        "noEmit": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "resources/*"
            ],
            "@/*": [
                "resources/*"
            ]
        },
    },
    "include": [
        "resources/scripts/**/*.vue",
        "resources/views/**/*.vue",
    ],
    "exclude": [
        "node_modules",
    ]
}
