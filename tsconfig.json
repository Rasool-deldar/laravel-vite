{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "lib": [
            "ESNext",
            "ESNext.AsyncIterable",
            "DOM"
        ],
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowJs": true,
        "sourceMap": true,
        "strict": true,
        "noEmit": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "resources/*"
            ],
            "@/*": [
                "resources/*"
            ],
            "@css": [
                "resources/css/*"
            ],
            "@scss": [
                "resources/scss/*"
            ],
            "@js": [
                "resources/js/*"
            ],
            "@images": [
                "resources/images/*"
            ],
            "@scripts": [
                "resources/scripts/*"
            ],
            "@components": [
                "resources/views/components/*"
            ]
        },
    },
    "include": [
        "resources/scripts/**/*.vue",
        "resources/views/**/*.vue",
    ],
    "exclude": [
        "node_modules",
    ]
}
